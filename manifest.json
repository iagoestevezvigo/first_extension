{
    "manifest_version": 3,
    "name": "LinkedIn Reminder Extension",
    "version": "1.0",
    "description": "Reminds you to open the extension when you visit LinkedIn.",
    "permissions": [
      "scripting",
      "activeTab",
      "notifications",
      "cookies",
      "storage"
    ],
    "host_permissions": [
      "https://*.amazon.es/*"
    ],
    "content_scripts": [
      {
        "matches": ["https://www.amazon.es/gp/cart/*"],
        "js": ["content.js"]
      }
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "hello.html",
      "default_icon": "logo.png",
      "default_title": "LinkedIn Reminder Extension"
    }
  }
  